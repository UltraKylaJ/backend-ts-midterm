<h1>Edit a Pet</h1>
{{#with foundPet}}
<form action='/pets/edit/{{petId}}' method="POST">
    <label for="name">Enter Item Name: </label>
    <input type="text" name="name" placeholder="Enter Name" value="{{name}}" /><br>

    <label for="imgUrl">Enter Image Url: </label>
    <input type="text" name="imgUrl" placeholder="Enter Image Url" value="{{imgUrl}}" /><br>

    <label for="animal">Enter Type of Animal: </label>
    <input type="text" name="animal" placeholder="Enter Animal Type" value="{{animal}}" /><br>

    <label for="description">Enter Item Description: </label>
    <input type="text" name="description" placeholder="Enter Description" value="{{description}}" /><br>

    <button type="submit">Edit Pet</button>
</form>
{{/with}}

<a href="/pets">Back to List</a>

<form action="/pets/delete/{{petId}}" method="POST">
    <button type="submit" class="btn-danger">This pet has been adopted! Goodbye!</button>
</form>